// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// npm run prisma:reset
// npm run prisma:migrate -- --name init
// npm run prisma:generate

enum MemberRole {
  ADMIN
  MEMBER
}

enum SplitMode {
  EQUAL
  PERCENT
  MANUAL
}


/* ---------- Existing auth/group models ---------- */
model User {
  id            String        @id @default(cuid())
  clerkId       String?  @unique
  email         String        @unique
  name          String?
  imageUrl      String?
  baseCurrency  String @default("SGD")
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  memberships   GroupMember[]
  expenses      Expense[]     // personal expenses authored by this user
  category      Category[]
  shares        ExpenseShare[]
  FxRates       FxRate[]  
}

model Group {
  id           String        @id @default(cuid())
  name         String
  slug         String        @unique
  defaultCurr  String        @default("SGD")
  createdById  String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  members      GroupMember[]
  expenses     Expense[]
}

model GroupMember {
  id       String     @id @default(cuid())
  groupId  String
  userId   String
  role     MemberRole @default(MEMBER)

  group    Group      @relation(fields: [groupId], references: [id])
  user     User       @relation(fields: [userId], references: [id])

  @@unique([groupId, userId])
}



/* ---------- Phase 1: Personal spending + receipts ---------- */

model Category {
  id        String   @id @default(cuid())
  userId    String
  name      String
  color     String?
  icon      String?
  isActive  Boolean  @default(true)   // NEW

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id])
  expenses  Expense[]

  @@unique([userId, name])
  @@index([userId])
}


model Expense {
  id             String    @id @default(cuid())
  userId         String
  groupId        String?
  title          String
  amount         Decimal   @db.Decimal(14, 2)
  currency       String
  fxToBase       Decimal   @db.Decimal(18, 8)
  amountInBase   Decimal   @db.Decimal(14, 2)
  date           DateTime  @default(now())
  note           String?

  categoryId           String?
  categoryNameSnapshot String?   // NEW

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user           User      @relation(fields: [userId], references: [id])
  group          Group?    @relation(fields: [groupId], references: [id])
  category       Category? @relation(fields: [categoryId], references: [id])
  photoRef       PhotoRef[]
  splitMode      SplitMode @default(EQUAL)
  shares         ExpenseShare[]

  @@index([userId, date])
  @@index([groupId, date])
  @@index([categoryId])
}

model ExpenseShare {
  id        String   @id @default(cuid())
  expenseId String
  userId    String
  amount    Decimal  @db.Decimal(14, 2) // share amount in group/base currency
  createdAt DateTime @default(now())

  expense   Expense  @relation(fields: [expenseId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@index([expenseId])
  @@index([userId])
}


model PhotoRef {
  id         String   @id @default(cuid())
  expenseId  String
  url        String   // Edge Store URL (or any storage)
  width      Int?
  height     Int?
  size       Int?     // bytes
  mimeType   String?  // e.g., "image/jpeg"
  createdAt  DateTime @default(now())

  expense    Expense  @relation(fields: [expenseId], references: [id])

  @@index([expenseId])
}

model FxRate {
  id        String   @id @default(cuid())
  userId    String?
  base      String   // e.g. "SGD" (your base currency)
  quote     String   // e.g. "JPY" (spending currency)
  rate      Decimal  @db.Decimal(18, 8) // 1 QUOTE = rate BASE
  asOfDate  DateTime @default(now())

  user      User?    @relation(fields: [userId], references: [id])

  @@index([base, quote, asOfDate])
  @@index([userId])
  @@unique([userId, base, quote])
}
