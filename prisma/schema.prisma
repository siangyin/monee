/* ---------- Existing auth/group models ---------- */
model User {
  id          String        @id @default(cuid())
  email       String        @unique
  name        String?
  imageUrl    String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  memberships GroupMember[]
  expenses    Expense[]     // personal expenses authored by this user
  category    Category[]
}

model Group {
  id           String        @id @default(cuid())
  name         String
  slug         String        @unique
  defaultCurr  String        @default("SGD")
  createdById  String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  members      GroupMember[]
  expenses     Expense[]
}

model GroupMember {
  id       String     @id @default(cuid())
  groupId  String
  userId   String
  role     MemberRole @default(MEMBER)

  group    Group      @relation(fields: [groupId], references: [id])
  user     User       @relation(fields: [userId], references: [id])

  @@unique([groupId, userId])
}

enum MemberRole {
  ADMIN
  MEMBER
}

/* ---------- Phase 1: Personal spending + receipts ---------- */

model Category {
  id        String   @id @default(cuid())
  // Category name is per user (each user can have their own set)
  userId    String
  name      String
  color     String?  // e.g., "emerald-500"
  icon      String?  // e.g., "shopping-bag"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id])
  expenses  Expense[]

  @@unique([userId, name])
  @@index([userId])
}

model Expense {
  id             String    @id @default(cuid())
  // Personal owner (always present for personal expenses)
  userId         String
  // Optional group linkage (empty = personal expense; filled later for group expenses)
  groupId        String?
  // Basic fields
  title          String
  amount         Decimal   @db.Decimal(14, 2)
  currency       String    // e.g., "SGD", "JPY"
  // Snapshot FX (expense currency -> base or group currency at creation)
  fxToBase       Decimal   @db.Decimal(18, 8)
  // Normalized amount for reporting
  amountInBase   Decimal   @db.Decimal(14, 2)
  date           DateTime  @default(now())
  note           String?
  // Optional links
  categoryId     String?
  // Audit
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Relations
  user           User      @relation(fields: [userId], references: [id])
  group          Group?    @relation(fields: [groupId], references: [id])
  category       Category? @relation(fields: [categoryId], references: [id])
  photoRef       PhotoRef[]

  @@index([userId, date])
  @@index([groupId, date])
  @@index([categoryId])
}

model PhotoRef {
  id         String   @id @default(cuid())
  expenseId  String
  url        String   // Edge Store URL (or any storage)
  width      Int?
  height     Int?
  size       Int?     // bytes
  mimeType   String?  // e.g., "image/jpeg"
  createdAt  DateTime @default(now())

  expense    Expense  @relation(fields: [expenseId], references: [id])

  @@index([expenseId])
}

/* ---------- Optional reference rates (Phase 4, kept now for completeness) ---------- */
model FxRate {
  id        String   @id @default(cuid())
  base      String   // e.g., "SGD"
  quote     String   // e.g., "JPY"
  rate      Decimal  @db.Decimal(18, 8)
  asOfDate  DateTime @default(now())

  @@index([base, quote, asOfDate])
}
